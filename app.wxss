/**app.wxss**/
page{
  background-color: #eee;
}
view, scroll-view {
    display: flex;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.btn {
  background-color: #fff;
  border: 0;
  border-radius: 0;
}
.btn::after {
  border: 0;
}
.hide {
  display: none
}
.left {
  float: left;
}
.right {
  float: right;
}
.text-center {
  align-items: center;
  justify-content: center;
}
.row {
  flex-direction: row;
}
.column {
  flex-direction: column;
}
.container {
  font-size: 26rpx;
  max-width: 750rpx;
  flex-direction: column;
}
